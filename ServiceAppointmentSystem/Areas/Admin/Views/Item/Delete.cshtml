@model ServiceAppointmentSystem.Models.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Item";
}

<h1 class="mt-4 mb-4">Item Index</h1>

<form method="post">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary">Delete an existing cover type</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <input asp-for="Item.Id" class="form-control" type="hidden" />
                <div class="col-4">
                    <label asp-for="Item.Name"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Item.Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-dark text-white form-control">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
