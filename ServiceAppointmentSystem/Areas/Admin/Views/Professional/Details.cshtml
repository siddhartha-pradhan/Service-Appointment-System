@model ServiceAppointmentSystem.Models.ViewModels.ProfessionalViewModel

@{
    ViewData["Title"] = "Professional Details";
}

<h1 class="mt-4 mb-3">Professional Details</h1>

<div class="container-fluid">
	<div class="row">
		<div class="col-auto">
		@if (Model.ProfileImage != null)
		{
			<img id="profilePicture" style="width:450px;height:500px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfileImage))">
		}
		</div>
		<div class="col-6 ml-2 mt-4">
			<input asp-for="ProfessionalId" class="form-control" hidden/>
			<input asp-for="UserId" class="form-control" hidden/>
			<div class="form-group row mb-4">
				<div class="col-5 mt-2">
					<label asp-for="FullName"></label>
				</div>
				<div class="col-7">
					<input asp-for="FullName" class="form-control" disabled/>
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row mb-4">
				<div class="col-5 mt-2">
					<label asp-for="EmailAddress"></label>
				</div>
				<div class="col-7">
					<input asp-for="EmailAddress" class="form-control" disabled/>
					<span asp-validation-for="EmailAddress" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row mb-4">
				<div class="col-5 mt-2">
					<label asp-for="PhoneNumber"></label>
				</div>
				<div class="col-7">
					<input asp-for="PhoneNumber" class="form-control" disabled/>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row mb-3">
				<div class="col-5">
					<label hidden></label>
				</div>
				<div class="col-7">
					<div class="row">
						<div class="col-6">
							<a class="btn btn-outline-primary mb-2 w-100" href="@Model.Resume" target="_blank">Resume</a>
						</div>
						<div class="col-6">
							<a class="btn btn-outline-primary mb-2 w-100" href="@Model.Certification" target="_blank">Certification</a>
						</div>
					</div>
				</div>
			</div>
			<div class="form-group row mb-5">
				<div class="col-5">
					<label hidden></label>
				</div>
				<div class="col-7">
					<div class="row">
						<div class="col-12">
							<a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
