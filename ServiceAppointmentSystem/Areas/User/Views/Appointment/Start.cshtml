@model ServiceAppointmentSystem.Models.ViewModels.AppointmentViewModel;

@{
    ViewData["Title"] = "Start an Appointment";
}

<form method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary">Book an Appointment</h2>
        </div>
        <div class="pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Request"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Request" class="form-control" />
                    <span asp-validation-for="Request" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="ServiceId"></label>
                </div>
                <div class="col-8 mb-4">
                    @Html.DropDownList("ServiceId", (IEnumerable<SelectListItem>)ViewData["ServiceId"], "Select a service", htmlAttributes: new { @class = "form-control dropdown" })
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-4 row">
                            <label asp-for="Request" class="mb-2"></label>
                            <input asp-for="Request" class="form-control ms-2" />
                            <span asp-validation-for="Request" class="text-danger"></span>
                        </div>

                        <div class="mb-4 row">
                            <label asp-for="ServiceId" class="mb-2"></label>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <button type="submit" class="btn btn-primary form-control">Book</button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

