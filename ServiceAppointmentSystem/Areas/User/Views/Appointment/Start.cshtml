@model ServiceAppointmentSystem.Models.ViewModels.AppointmentViewModel;

@{
    ViewData["Title"] = "Start an Appointment";
}

<form method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary mt-4">Book an Appointment</h2>
        </div>
        <div class="pt-4">
            <div class="row">
                <div class="col-2">
                    <label asp-for="ServiceId"></label>
                </div>
                <div class="col-5 mb-4">
                    @Html.DropDownList("ServiceId", (IEnumerable<SelectListItem>)ViewData["ServiceId"], "Select a service", htmlAttributes: new { @class = "form-control dropdown" })
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Request"></label>
                </div>
                <div class="col-5 mb-4">
                    <textarea asp-for="Request" class="form-control"></textarea>
                    <span asp-validation-for="Request" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label asp-for="AppointedDate"></label>
                </div>
                <div class="col-5 mb-4">
                    <input type="datetime-local" asp-for="AppointedDate" class="form-control" />
                    <span asp-validation-for="AppointedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-primary form-control">Book</button>
                </div>
                <div class="col-2">
                    <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        tinymce.init({
            selector: 'textarea',
        });
    </script>
}
